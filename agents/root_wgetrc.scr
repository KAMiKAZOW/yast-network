/**
 * File:	root_wgetrc.scr
 * Summary:	Agent for reading/writing /root/.wgetrc
 * Access:	read / write
 * Author:	Michal Svec <msvec@suse.cz>
 * See:		wget(1)
 *
 * Example:
 *   Dir(.etc.nsswitch_conf)
 *   (["passwd", "group", "hosts", "networks", "services"])
 **
 *   Read(.etc.nsswitch_conf.passwd)
 *   ("compat")
 **
 *   Write(.etc.nsswitch_conf.passwd, "files ldap")
 *   (true)
 *
 * $Id$
 */
.root.wgetrc

`ag_ini(
    IniAgent( "/root/.wgetrc",
	$[
	    "options" : [ "ignore_case", "global_values", "flat" ],
	    "comments" : [ "^#.*", "^[ \t]*$", ],
	    "params" : [
		$[ "match" : [ "^[ \t]*([a-zA-Z_]+)[ \t]*=[ \t]*(.*)[ \t]*$", "%s = %s" ] ]
	    ]
	]
    )
)
