/**
 * File:	cust_providers.scr
 * Summary:	SCR agent for dialup providers
 * Author:	Petr Blahos <pblahos@suse.cz>
 * Access:	Read/Write
 * See:		yast2-config-network package
 *
 * General syntax:
 *	# comment
 *	[Section name]
 *	Key = value
 *	Another key = another value
 *
 * $Id$
 *
 * <p>Reads dialup providers from files
 * /etc/sysconfig/network/providers/*.</p>
 */
.custom_providers

`ag_ini(
  IniAgent( [ "/etc/sysconfig/network/providers/*" ],
    $[
      "options" : [ "global_values", ],
      "comments": [ "^[ \t]*#.*", "^[ \t]*$" ],
      "sections" : [
      ],
      "params" : [
        $[ "match" : [ "([a-zA-Z0-9_]+)[ \t]*=[ \t]*\"([^\"]*)\"", "%s=\"%s\""], ],
        $[ "match" : [ "([a-zA-Z_][a-zA-Z0-9_]*)[ \t]*=[ \t]*'([^']*)'", "%s='%s'"], ],
        $[ "match" : [ "([a-zA-Z0-9_]+)[ \t]*=[ \t]*([^\"]*[^ \t\"]|)[ \t]*$", "%s=\"%s\""], ],
      ],
    ]
  )
)

