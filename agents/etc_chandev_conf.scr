/**
 * File:	etc_chandev_conf.scr
 * Summary:	Agent for reading/writing /etc/chandev.conf
 * Access:	read/write
 * Authors:	Michal Svec <msvec@suse.cz>
 *
 * Example:
 *   Dir(.etc.chandev_conf)
 *   (["qeth0", "lcs1", "ctc0", "escon0", "hsi7"])
 **
 *   Read(.etc.chandev_conf.ctc0)
 *   ("0x0600,0x0601,0,0")
 **
 *   Write(.etc.chandev_conf.ctc0, "0x0600,0x0601,0,1")
 *   (true)
 *
 * $Id$
 */
.etc.chandev_conf

`ag_ini(
    `IniAgent( "/etc/chandev.conf",
	$[
	    "options"	: [ "global_values", "flat" ],
	    "comments"	: [ "^#.*", "^[ \t]*$" ],
	    "params"	: [
		$[ "match" : [ "([^,]+),(.*[^ \t])[ \t]*$", "%s,%s" ] ]
	    ]
	]
))
