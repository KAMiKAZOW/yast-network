 *
 * Menuentry file for configuration of DSL connection.
 *
 */

{

textdomain "network";

    return( [ "dsl", $[

	/* name of the entry, shon in curses menu and ycc */
	`menuentry    : _("DSL configuration"),

	/* leave blank,  experts only ;-) */
	`arguments    : [ ],

	/* group (one of the groups in /usr/lib/YaST2/etc/y2contolcenter.conf */
	`group        : "Network",

	/* Icon used in y2contolcenter */
	`icon         : "adsl.png",

	/* explanation of yast2 menueentry in ncurses menu */
	`widget       : `RichText(

	    _("Launch this module to configure your DSL connection.")
	    +
	    _("<p>You need to be logged in as <i>root</i> in order to do this.</p>")),

	/* explanation in YaST2 Control Center */
	`helptext     : _("Configure your DSL connection"),

	/* leave nil, experts only ;-) */
	`codefragment : nil

	]
    ]);

}
