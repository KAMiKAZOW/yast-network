{

textdomain "network";

import "Internet";

include "network/routines.ycp";
include "network/installation/dialogs.ycp";

/* Called backwards */
if(WFM::Args(2) == true)
    return `auto;

if(!Internet::do_test)
    return `auto;

/* Nothing to test */
if(!Internet::Fastest())
    return `auto;

if(!AskForPassword()) {
    y2error("Password required");
    return `next;
}

symbol ret = TestConnectionDialog();

if(ret == `next)
    AskYOUDialog();

return ret;

/* EOF */
}
