{

textdomain "network";
import "Lan";

/* The main () */
y2milestone("----------------------------------------");
y2milestone("Lan summary started");

Progress::off();
Lan::Read();
list sum = Lan::Summary(false);
string ret = sum[0]:"";
Progress::on();

/* Finish */
y2milestone("Lan summary finished");
y2milestone("----------------------------------------");
return ret;

/* EOF */
}
