import "DNS";
import "Label";
import "Lan";
import "Runlevel";
import "Wizard";

/**
 * Return a modification status
 * @return true if data was modified
 */
define boolean Modified() ``{
    return DNS::modified;
}

/* NI: required wrt functions in routines.ycp */
block<boolean> AbortFunction = nil;

include "network/runtime.ycp";
include "network/services/dns.ycp";

Wizard::CreateDialog();
DNS::Read();
Lan::Read();
Wizard::ReplaceNextButton(`PushButton(`id(`next), `opt(`default, `key_F10), Label::FinishButton()));
/* main ui function */
any ret = DNSMainDialog(true);
y2debug("ret == %1", ret);

if(ret == `next && DNS::modified) {
    DNS::Write();
    Runlevel::RunInitScript("network", "restart-all-dhcp-clients");
