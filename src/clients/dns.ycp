{

textdomain "network";

import "DNS";
import "Lan";
import "Wizard";

/* The main () */
y2milestone("DNS module started");
y2milestone("----------------------------------------");

include "network/services/dns.ycp";
include "network/runtime.ycp";

/**
 * Return a modification status
 * @return true if data was modified
 */
global define boolean Modified() ``{
    return DNS::modified;
}

Wizard::CreateDialog();
DNS::Read();
Lan::Read();
Wizard::ReplaceNextButton(`PushButton(`id(`next), `opt(`default), FinishButtonLabel()));
/* main ui function */
any ret = DNSMainDialog();
y2debug("ret == %1", ret);

if(ret == `next && DNS::modified) {
    DNS::Write();
    RestartNetwork();
}

UI::CloseDialog();

/* Finish */
y2milestone("DNS module finished");
return ret;

/* EOF */
}
