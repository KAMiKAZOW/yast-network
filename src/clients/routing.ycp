{

textdomain "network";

/* The main () */
y2milestone("----------------------------------------");
y2milestone("Routing module started");

import "Label";
import "Routing";
import "Wizard";

include "network/services/routing.ycp";
include "network/runtime.ycp";

/**
 * Return a modification status
 * @return true if data was modified
 */
global define boolean Modified() ``{
    return Routing::modified;
}

Routing::Read();
Wizard::CreateDialog();
Wizard::ReplaceNextButton(`PushButton(`id(`next), `opt(`default, `key_F10), Label::FinishButton()));
/* main ui function */
any ret = RoutingMainDialog(true);
y2debug("ret == %1", ret);

if(ret == `next && Routing::modified) {
    Routing::Write();
    RestartNetwork();
}

UI::CloseDialog();

/* Finish */
y2milestone("Routing module finished");
y2milestone("----------------------------------------");
return ret;

/* EOF */
}
