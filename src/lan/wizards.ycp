/**
 * Configuration sequence
 * @return sequence result
 */
define symbol AddressSequence() ``{

    map aliases = $[
	"address"	: ``(AddressDialog()),
	"dhcp"		: ``(DHCPDialog()),
	"details"	: ``(DetailsDialog()),
	"hosts"		: ``(HostsMainDialog(false)),
	"proxy"		: ``(ProxyMainDialog(false)),
	"virtual"	: ``(VirtualDialog(false)),
	"hostname"	: ``(DNSMainDialog(false)),
	"routing"	: ``(RoutingMainDialog(false)),
	"commit"	: [ ``(Commit()), true ],
    ];

    map sequence = $[
	"ws_start"	: "address",
	"address" : $[
	    `abort	: `abort,
	    `next	: "commit",
	    `details	: "details",
	    `dhclient	: "dhcp",
	    `hosts	: "hosts",
	    `proxy	: "proxy",
	    `routing	: "routing",
	    `hostname	: "hostname",
	    `virtual	: "virtual",
	    `hardware	: `hardware,
	],
	"dhcp" : $[
	    `abort	: `abort,
	    `next	: "address",
	],
	"details" : $[
	    `abort	: `abort,
	    `next	: "address",
	],
	"hosts" : $[
	    `abort	: `abort,
	    `next	: "address",
	],
	"proxy" : $[
